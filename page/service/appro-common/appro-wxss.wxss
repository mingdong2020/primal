.previewimg{  
  float:left;  
  width:45%;  
  height:400rpx;  
  margin:2%;  
}  
.previewimg image{  
  width:100%;  
  height:100%;  
}
.Card-condition{
  padding: 22rpx 30rpx 16rpx 30rpx;
  border-bottom: 18rpx solid #E5E5E5;
}
.Card-condition-items{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: top;
  -webkit-align-items: top;
          align-items: top;
