}
.matter-items{
  position: relative;
  float: left;
  width: 44%;
  margin-top: 12rpx;
  margin-left: 4%;
  box-sizing: border-box;       
  background-color: #dedede; 
  border: 1px solid #c9c9c9;
  box-shadow: 2rpx 2rpx 14rpx #d4d4d4;
  border-radius:150% / 50%;
}
.matter-list{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.matter-img{
  width: 58rpx;
  height: 58rpx;
  padding: 12rpx 16rpx;
}
.matter-text{
  padding: 12rpx auto;
  font-size: 30rpx;
  color: #333333;
}
.process-items{
