.scope_icon{
  margin: 14rpx 8rpx 0 28rpx;
  width: 42rpx;
  height: 42rpx;
}
.scope-text{
  margin-right: 8rpx;
  font-size: 28rpx;
  color: #858585;
}
.market-content{
  padding-bottom: 8rpx;
  border-bottom: 18rpx solid #E5E5E5;
}
.market-desc{
  font-size: 30rpx;
  color: #333333;
  margin:10rpx 30rpx 0 30rpx;
