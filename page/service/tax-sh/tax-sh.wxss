.wx-swiper-dot.wx-swiper-dot-active{
  padding:0 6rpx;
  border-radius:25px;
}
.tax-sh-panel {
  background-color: #FFFFFF;
  margin-top: 10px;
  position: relative;
  overflow: hidden;
}
.tax-sh-panel:first-child {
  margin-top: 0;
}
.tax-sh-panel:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #E5E5E5;
  color: #E5E5E5;
}
.tax-sh-panel:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #E5E5E5;
  color: #E5E5E5;
}
.tax-sh-heading {
  padding: 20rpx 30rpx 16rpx;
  color: #616161;
  font-weight: 600;
  font-size: 26rpx;
  position: relative;
}
.tax-sh-heading:after {
  content: " ";
  position: absolute;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #E5E5E5;
  color: #E5E5E5;
  left: 15px;
}
.tax-sh-box {
  padding: 15px;
  position: relative;
}
.tax-sh-box:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #E5E5E5;
  color: #E5E5E5;
  left: 15px;
}
.tax-sh-box:first-child:before {
  display: none;
}
.tax-input{
  border-bottom: 1rpx solid #E5E5E5;
  margin-bottom:30rpx;
}
input{
  margin:18rpx 0;
  color:#383838;
  font-weight:bolder;
}
.tax-flex{
  margin-top:24rpx;
  color:#383838;
  font-size:32rpx;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
}
.tax-flex-title{
  font-weight:600;
}
.tax-flex_item{
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.tax-btn{
