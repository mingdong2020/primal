}
button{
  font-size:32rpx;
}
.swiper{
  margin:0px;
}
.hide{
  display:none;
}
.show{
  display:block;
}
.page-park{
  width: 100%;
}
.park-title{
  padding: 28rpx 30rpx 16rpx;
  font-size: 28rpx;
  color: #616161;
  font-weight: 600;
  position: relative;
}
.park-title:after{
  content:" ";
  position: absolute;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #E5E5E5;
  color: #E5E5E5;
