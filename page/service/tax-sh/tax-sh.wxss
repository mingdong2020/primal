}
.park-desc-apmsg:last-child{
  border-bottom: none;
}
.grid-title{
  padding:4rpx 0 4rpx 18rpx;
  font-size: 28rpx;
  color: #616161;
  font-weight: 600;
  line-height:2.3em;
  border-left: 8rpx solid #1aad19;
  position: relative;
}
.grid-title:after{
  content: " ";
  position: absolute;
  bottom: 0;
  left: 8rpx;
  right: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.tax-grid{
  margin-top: 18rpx;
  overflow:hidden;
}
.grid{
  position:relative;
  float:left;
  padding: 30rpx 20rpx;
  margin-left: 2%;
  margin-top: 2%;
  width: 47%;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 2px 2px 2px #dbdbdb;
}
.grid-img{
  display: block;
  width:72rpx;
  height:72rpx;
  margin: 0 auto;
}
.grid-text{
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #ffffff;
  font-size: 30rpx;
  font-weight:600;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.grid-foot{
  padding:20rpx 0 60rpx 0;
