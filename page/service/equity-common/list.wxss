.page {
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background-color:#F8F8F8;
  font-size: 16px;
}
.page-bottom{
  height: 100%;
  width: 750rpx;
  position: fixed; 
  background-color: #2e2e2e;
  z-index: 0;
}
.page-content{
  padding-top: 100rpx;
}
.page-menu{
  color: white;
  font-size:32rpx;
  padding: 19rpx 0 19rpx 42rpx;
}
.page-top{
  height: 100%;
  position: fixed;
  width: 750rpx;
  background-color:#F8F8F8;
  z-index: 0;
  overflow:hidden;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}
.page-top-img{
  position: absolute;
  width: 228rpx;
  height: 94rpx;
  left: 20rpx;
  top: 0rpx;
}
.c-state1{
  transform: rotate(0deg) scale(1) translate(45%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(45%,0%); 
}
.c-state2{
  transform: rotate(0deg) scale(.9) translate(45%,0%); 
  -webkit-transform: rotate(0deg) scale(.9) translate(45%,0%); 
}
.page-title{
  margin: 20rpx auto;
  vertical-align: middle;
  text-align:center;
  color: #2e2e2e;
  font-size:36rpx;
  font-weight:bolder;
}
.equity-block {
  padding:0 16rpx 10rpx 16rpx;
}
.equity-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin:10rpx 0;
}
.equity-flex__item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.equity-placeholder{
  margin: 0;
  padding: 0 0 0 10px;
  text-align: center;
  height: 2.3em;
  line-height: 2.3em;
  color: #000000;
  font-size:34rpx;
}
.equity-content{
  margin: 0;
  padding: 0;
  text-align: center;
  height: 2em;
  line-height: 2em;
  color: #000000;
}
.placeholder{
  margin: 0 8rpx;
  padding: 0 24rpx;
  text-align: center;
  background-color: #EBEBEB;
  height: 2em;
  line-height: 2em;
  color: #000000;
  font-size:34rpx;
}
.equity-flex .active{
  background: #008842;
  color: #ffffff;
}
.swiper-box{
  width:100%;
  height: 78%;
}
.scroll-box{
  height: 100%;
}

.list-view{
  border-top: 1px solid #cccccc;
}
.list-url {
  padding: 15px;
  position: relative;
}
.list-url:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #E5E5E5;
  color: #E5E5E5;
  left: 15px;
}
.list-url:first-child:before {
  display: none;
}
.list-appmsg {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.list-active {
  background-color: #ECECEC;
}
.list-img {
  margin-right: .8em;
  width: 60px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  border:1px solid #f5f5f5;
}
.list-image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}
.list-text {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  min-width: 0;
}
.list-head {
  color:#686b70;
  font-weight: 400;
  font-size: 15px;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;
}
.list-desc {
  color: #686b70;
  font-size: 13px;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;  
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.navigator-hover{
  background-color:rgba(0,0,0,0.5);
  opacity:0.6;
}