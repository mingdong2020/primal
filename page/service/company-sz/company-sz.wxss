@import "/page/common/company.wxss";
.banner-1{
  background:url(https://www.mdqygl.cn/static/source/ban-sz01.jpg) no-repeat;
  background-size:100% 100%;
  background-position:center center;
}
.banner-2{
  background:url(https://www.mdqygl.cn/static/source/ban-sz01.jpg) no-repeat;
  background-size:100% 100%;
  background-position:center center;
}
.deal-content{
  width: 100%;
  border-bottom: 18rpx solid #E5E5E5;
  padding: 36rpx 0 34rpx 0;
}
.deal-Items{
  height: 460rpx;
  padding: 0 0 0 52rpx;
  line-height: 1.8em;
  overflow: hidden;
}
.deal-text{
  position: relative;
  font-size: 30rpx;
  color: #525252;
}
.power-content{
  margin: 0 30rpx;
}
.power-items{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 20rpx;        
}
.power-title{
  width: 22%;
  height: 66px;
  padding: 18rpx 0 6rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  color: #2e2e2e;
  text-align: center;
}
.power-desc{
  width: 78%;
  height: 72px;
  padding: 4rpx 8rpx;
  font-size: 28rpx;
  color: #525252;
  box-shadow: 2rpx 2rpx 10rpx #666;
}
.page-guard{
  width: 100%;
  padding: 32rpx 0 0 0;
  text-align: center;
}
.guard-content{
  width: 92%;
  display: inline-block;
  margin: 0 auto;
  padding-top: 16rpx;
  border: 1rpx solid #E5E5E5;
  box-shadow: 2rpx 2rpx 10rpx #666;
  background-color: #ffffff;
  background: url(https://mdqygl.cn/static/source/chapter.png) no-repeat;
  background-size: 26% 42%;
  background-position: top right;
}
.guard-items{
  float: left; 
  width: 45.5%;
  margin: 16rpx 0 12rpx 3%;
}
.guard-title{
  font-size: 28rpx;
  font-weight: 600;
  color: #525252;
  text-align: left;
}
.guard-desc{
  font-size: 28rpx;
  color: #525252;
  text-align: left;
}
