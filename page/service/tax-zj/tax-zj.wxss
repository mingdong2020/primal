}
.intro-desc-apmsg{
  border-bottom: 1rpx solid #E5E5E5;
}
.tax-btn{
  border-top: 1rpx solid #E5E5E5;
  border-bottom: 1rpx solid #E5E5E5;
  background-color:#f0f0f0;
  padding:30rpx 26rpx;
}
button{
  font-size:32rpx;
}
.enter{
